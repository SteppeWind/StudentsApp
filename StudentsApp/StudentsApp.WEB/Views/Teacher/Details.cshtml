@model StudentsApp.WEB.Models.Entities.ComplexEntities.ComplexTeacher

@{
    ViewBag.Title = "GetTeacher";
}

<h2>@Model.FullName</h2>

<div class="well">
    <h3>Степени</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Факультет</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>@post.NamePostTeacher</td>
                    <td>@post.FacultyName</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<div class="well">
    <h3>Предметы</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Факультет</th>
                @if (User.IsInRole("dean") || User.IsInRole("admin"))
                {
                    <th>Действия</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var subject in Model.Subjects)
            {
                <tr>
                    <td>@subject.SubjectName</td>
                    <td>@subject.FacultyName</td>
                    @if (User.IsInRole("dean") || User.IsInRole("admin"))
                    {
                        <td>
                            @using (Html.BeginForm("DeleteSubjectFromTeacher", "Dean", FormMethod.Post))
                            {
                                @Html.Hidden("idFaculty", subject.FacultyId)
                                @Html.Hidden("idTeacher", Model.Id)
                                @Html.Hidden("idSubject", subject.Id)
                                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                                <button class="btn btn-default glyphicon glyphicon-remove"></button>
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    @using (Html.BeginForm("AddSubjectToTeacher", "Dean", FormMethod.Get))
    {
        @Html.Hidden("idTeacher", Model.Id)
        @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
        <input type="submit" class="btn btn-primary" value="Добавить дисциплину" />
    }
</div>
<br />
<div class="well">
    <h3>Студенты, посещающие данного преподавателя</h3>
    <div class="panel-group" id="accordion">
        @foreach (var studentSubject in Model.StudentsSubjects)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#@studentSubject.Id">@studentSubject.SubjectName</a>
                    </h4>
                </div>
                <div id="@studentSubject.Id" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Имя</th>
                                    <th>Средний балл</th>
                                    @if (User.IsInRole("dean") || User.IsInRole("admin"))
                                    {
                                        <th>Действия</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in studentSubject.Students)
                                {
                                    <tr>
                                        <td>
                                            <form action="/Student/Details" method="get">
                                                <input type="hidden" name="id" value="@student.Id"/>
                                                <input type="submit" value="@student.Abbr" class="btn btn-link" />
                                            </form>
                                        </td>
                                        <td>@student.AverageMark</td>
                                        @if (User.IsInRole("dean") || User.IsInRole("admin"))
                                        {
                                            <td>
                                                @using (Html.BeginForm("DeleteStudentFromTeacher", "Dean", FormMethod.Post))
                                                {
                                                    @Html.Hidden("idFaculty", studentSubject.FacultyId)
                                                    @Html.Hidden("idStudent", student.Id)
                                                    @Html.Hidden("idSubject", studentSubject.Id)
                                                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                                                    <button class="btn btn-default glyphicon glyphicon-remove"></button>
                                                }
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
    @using (Html.BeginForm("AddStudentToTeacher", "Dean", FormMethod.Get))
    {
        @Html.Hidden("idTeacher", Model.Id)
        @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
        <input type="submit" class="btn btn-primary" value="Добавить студентов" />
    }
</div>
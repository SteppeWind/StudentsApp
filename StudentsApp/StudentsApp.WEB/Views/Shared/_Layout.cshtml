<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Справка", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-default">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Факультеты", "Index", "Faculty")</li>
                    <li>@Html.ActionLink("Преподаватели", "Index", "Teacher")</li>
                    <li>@Html.ActionLink("Студенты", "Index", "Student")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @{
            var tempDataMessage = TempData["message"];
            if (tempDataMessage != null && $"{tempDataMessage}" != "")
            {
                <div class="alert alert-success">@Html.Raw(tempDataMessage)</div>
            }

            var tempDataErrorMessage = TempData["errorMessage"];
            if (tempDataErrorMessage != null && $"{tempDataErrorMessage}" != "")
            {
                <div class="alert alert-warning">@Html.Raw(tempDataErrorMessage)</div>
            }
        }

        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now.ToShortDateString()</p>
            @Html.Action("GetCountStudentAndTeacher", "Home")
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>